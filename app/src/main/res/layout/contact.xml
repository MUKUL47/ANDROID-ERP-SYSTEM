<?xml version="1.0" encoding="UTF-8"?>
<android.support.constraint.ConstraintLayout tools:context=".PopupWindow.Contact"
    android:background="@color/colorPrimary"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <TextView android:layout_height="125dp"
        android:layout_width="305dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:fontFamily="monospace" android:textStyle="bold"
        android:textSize="18sp"
        android:textColor="@color/common_google_signin_btn_text_dark_default"
        android:linksClickable="true"
        android:textIsSelectable="true"
        android:text="" android:scrollbars="vertical"
        android:layout_marginRight="61dp" android:layout_marginEnd="61dp"
        android:layout_marginTop="16dp" android:layout_marginLeft="61dp"
        android:layout_marginStart="61dp" android:id="@+id/adminBoard"/>

    <ImageView
        android:id="@+id/exit"
        android:layout_width="49dp"
        android:layout_height="46dp"
        android:layout_marginStart="5dp"
        android:layout_marginLeft="5dp"
        android:onClick="exitContact"
        app:layout_constraintEnd_toStartOf="@+id/progressBarS"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/adminBoard"
        app:srcCompat="@android:drawable/ic_delete" />

    <ProgressBar android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="55dp"
        android:id="@+id/progressBarAdmin"
        style="?android:attr/progressBarStyle"/>

</android.support.constraint.ConstraintLayout>